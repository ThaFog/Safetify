{{#with comment}}
    {{#if hasVisibleComponent}}
        <div class="tsd-comment tsd-typography">
            {{#if shortText}}
                <div class="lead">
                    {{#markdown}}{{{shortText}}}{{/markdown}}
                </div>
            {{/if}}
            {{#if text}}
                {{#markdown}}{{{text}}}{{/markdown}}
            {{/if}}
            {{#if tags}}
                <dl class="tsd-comment-tags">
                    {{#each tags}}
                        {{#equals tagName "example"}}
                            <span class="tag-label">{{tagName}}</span>
                            <dd><pre class="code"><code>{{#markdown}}{{{text}}}{{/markdown}}</code></pre></dd>
                        {{else}}
                            <dt>{{tagName}}</dt>
                            <dd>{{#markdown}}{{{text}}}{{/markdown}}</dd>
                        {{/equals}}
                    {{/each}}
                </dl>
            {{/if}}
        </div>
    {{/if}}
{{/with}}