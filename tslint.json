{
    "rules": {
        "interface-name": true,
        "variable-name": [true, "checl-format", "allow-leading-underscore"],
        "curly": true,
        "member-access": [true, "check-accessors", "check-constructor", "check-parameter-property"],
        "member-ordering": [
            true,
            {
                "order": [
                    "private-static-field",
                    "protected-static-field",
                    "public-static-field",
                    "private-instance-field",
                    "protected-instance-field",
                    "public-instance-field",
                    "public-static-method",
                    "protected-static-method",
                    "private-static-method",
                    "public-constructor",
                    "protected-constructor",
                    "private-constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],
        "no-debugger": true,
        "no-duplicate-super": true,
        "no-duplicate-switch-case": true,
        "no-empty": true,
        "no-eval": true,
        "no-invalid-template-strings": true,
        "no-invalid-this": [true, "check-function-in-method"],
        "no-return-await": true,
        "no-shadowed-variable": true,
        "no-sparse-arrays": true,
        "no-string-literal": true,
        "no-string-throw": true,
        "no-switch-case-fall-through": true,
        "no-this-assignment": true,
        "no-unnecessary-class": ["allow-constructor-only", "allow-static-only"],
        "no-unsafe-any": false,
        "no-unsafe-finally": true,
        "no-unused-expression": true,
        "no-use-before-declare": true,
        "no-var-keyword": true,
        "no-void-expression": [true, "ignore-arrow-function-shorthand"],
        "restrict-plus-operands": true,
        "switch-default": true,
        "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
        "use-isnan": true,
        "use-default-type-parameter": true,
  
        "deprecation": true,
        "eofline": true,
        "indent": [true, "spaces", 4],
        "max-classes-per-file": [true, 2, "exclude-class-expressions"],
        "no-default-export": true,
        "no-duplicate-imports": true,
        "prefer-const": true,
        "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
  
        "align": [true, "parameters", "arguments", "statements", "members", "elements"],
        "array-type": [true, "array"],
        "arrow-return-shorthand": true,
        "class-name": true,
        "comment-format": [true, "check-space"],
        "import-spacing": true,
        "interface-over-type-literal": true,
        "newline-before-return": true,
        "new-parens": true,
        "no-boolean-literal-compare": true,
        "no-trailing-whitespace": [true, "ignore-blank-lines"],
        "number-literal-format": true,
        "object-literal-key-quotes": [true, "as-needed"],
        "one-line": [true, "check-catch", "check-finally", "check-else", "check-open-brace", "check-whitespace"],
        "one-variable-per-declaration": [true, "ignore-for-loop"],
        "prefer-method-signature": true,
        "prefer-switch": true,
        "prefer-template": [true, "allow-single-concat"],
        "quotemark": [true, "single"],
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "space-before-function-paren": false,
        "space-within-parens": 0,
        "whitespace": [true, "check-decl", "check-operator", "check-module", "check-separator", "check-rest-spread", "check-type", "check-typecast", "check-type-operator", "check-preblock"]
    }
  }
  